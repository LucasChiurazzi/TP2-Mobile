<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/twD"
        android:layout_width="94dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="279dp"
        android:text="Dolares"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/eTD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twD"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="166dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tVE"
        android:layout_width="116dp"
        android:layout_height="34dp"
        android:layout_below="@+id/eTD"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="247dp"
        android:text="Euros"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/eTE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tVE"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="166dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="24sp" />

    <RadioGroup
        android:layout_width="150dp"
        android:layout_height="83dp"
        android:layout_below="@+id/eTE"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="199dp">

        <RadioButton
            android:id="@+id/DaE"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Euros a Dolares"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/EaD"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:text="Dolares a Euros" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eTE"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="209dp"
        android:text="Cambio a..."
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <EditText

        android:id="@+id/eTresultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="148dp"
        android:ems="10"
        android:inputType="numberDecimal"
         android:textSize="24sp" />

    <Button
        android:id="@+id/bConvertir"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eTresultado"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="222dp"
        android:text="Convertir"
        android:textSize="18sp"
        android:onClick="convertir"/>

</RelativeLayout>
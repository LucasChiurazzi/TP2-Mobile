<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/twD"
        android:layout_width="109dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="219dp"
        android:text="Dolares"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/eTD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twD"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="166dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tVE"
        android:layout_width="116dp"
        android:layout_height="34dp"
        android:layout_below="@+id/eTD"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="261dp"
        android:text="Euros"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/eTE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tVE"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="162dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="24sp" />

    <RadioGroup
        android:layout_width="150dp"
        android:layout_height="83dp"
        android:layout_below="@+id/eTE"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="223dp">

        <RadioButton
            android:id="@+id/DaE"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Euros a Dolares" />

        <RadioButton
            android:id="@+id/EaD"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:text="Dolares a Euros" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eTE"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="118dp"
        android:text="Cambio a..."
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <EditText

        android:id="@+id/eTresultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="148dp"
        android:ems="10"
        android:inputType="numberDecimal"
         android:textSize="24sp" />

    <Button
        android:id="@+id/bConvertir"
        android:layout_width="155dp"
        android:layout_height="39dp"
        android:layout_below="@+id/eTresultado"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="154dp"
        android:onClick="convertir"
        android:text="Convertir"
        android:textSize="18sp" />

</RelativeLayout>